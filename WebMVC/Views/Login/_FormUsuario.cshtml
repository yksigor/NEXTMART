@model Domain.Models.Usuario

<div class="row" id="fomularioUsuario">
    <div class="col-md-12">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" onblur="buscarUsuario()" />
                <div class="valid-feedback">
                    Usuário válido!
                </div>
                <div class="invalid-feedback" id="userInvalido"></div>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label asp-for="RepitaPassword" class="control-label"></label>
                <input asp-for="RepitaPassword" class="form-control" />
            </div>
        </div>
    </div>
</div>