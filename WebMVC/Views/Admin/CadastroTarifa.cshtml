@model Domain.Models.Tarifa

@{
    Layout = null;
}

<h1>Cadastro de Tarifa</h1>
<div>
    <h4>Tarifa</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CadastroTarifa">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Nome</label>
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Porcentagem" class="control-label"></label>
                    <input asp-for="Porcentagem" class="form-control" />
                    <span asp-validation-for="Porcentagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Valor Máximo</label>
                    <input asp-for="ValorMaximo" class="form-control" />
                    <span asp-validation-for="ValorMaximo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar Tarifa" class="btn btn-success" />
                    <a data-dismiss="modal" class="btn btn-primary text-white">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>