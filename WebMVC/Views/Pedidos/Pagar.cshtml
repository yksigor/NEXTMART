@model Domain.Models.Venda
<div class="details-bigbox container fill-content">
    <div>
        <h4>Venda</h4>
        <hr />
        <div class="row">
            <div class="col-sm-2 mt-2">
                <strong>@Html.DisplayNameFor(model => model.Usuario):</strong>
            </div>
            <div class="col-sm-10 mt-2">
                @User.Identity.Name
            </div>
            <div class="col-sm-2 mt-2">
                <strong>@Html.DisplayNameFor(model => model.DataVenda):</strong>
            </div>
            <div class="col-sm-10 mt-2">
                @Html.DisplayFor(model => model.DataVenda)
            </div>
            <div class="col-sm-2 mt-2">
                <strong>@Html.DisplayNameFor(model => model.StatusVenda):</strong>
            </div>

            <div class="col-sm-10 mt-2">
                <span class="btn btn-dark">
                    @Html.DisplayFor(model => model.StatusVenda)
                </span>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-edit"></i> Detalhes</a>
        <a asp-action="Index" class="btn btn-danger"><i class="fa fa-arrow-left"></i> Voltar</a>
    </div>
</div>